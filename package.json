{
    "name": "dapp-service-template",
    "module": "index.ts",
    "type": "module",
    "devDependencies": {
        "@babel/eslint-parser": "^7.23.9",
        "@types/bun": "latest",
        "@typescript-eslint/eslint-plugin": "^6.19.1",
        "copyfiles": "^2.4.1",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-node": "^11.1.0",
        "husky": "^9.0.6",
        "lint-staged": "^15.2.0",
        "prettier": "^3.2.4"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "scripts": {
        "start": "export NODE_ENV=production && node ./out/index.js",
        "start:dev": "export NODE_ENV=development && bun index.ts",
        "start:watch": "export NODE_ENV=development && bun --watch index.ts",
        "build": "bun run build.mjs",
        "clean": "rm -rf ./out ./node_modules bun.lockb",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --quiet --fix"
        ],
        "*.{json,js,ts,jsx,tsx,html}": [
            "prettier --config .prettierrc 'src/**/*.ts' --write"
        ]
    },
    "dependencies": {
        "hono": "^3.12.8",
        "winston": "^3.11.0"
    }
}
